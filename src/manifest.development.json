{
    "manifest_version": 2,
    "name": "zj-chrome-ext",
    "description": "zj 使用vue 开发简单的Chrome扩展程序",
    "version": "0.0.1",
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "icons": {
        "16": "./assets/icon.png",
        "48": "./assets/icon.png",
        "128": "./assets/icon.png"
    },
    "permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.baidu.com/*"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_start"
        }
    ]
}